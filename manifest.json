{
  "manifest_version": 2,
  "name": "Load Assistant",
  "short_name": "Load Assistant",
  "version": "4.0.1",
  "description": "The program helps in working with loads.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["background.js"]
    }
  ],
  "permissions": ["tabs", "<all_urls>", "cookies"],
  "browser_action": {
    "default_icon": {
      "16": "img/16x16.png",
      "32": "img/32x32.png",
      "48": "img/48x48.png",
      "64": "img/64x64.png",
      "96": "img/96x96.png",
      "128": "img/128x128.png"
    },
    "default_popup": "index.html"
  },
  "icons": {
    "16": "img/16x16.png",
    "32": "img/32x32.png",
    "48": "img/48x48.png",
    "64": "img/64x64.png",
    "96": "img/96x96.png",
    "128": "img/128x128.png"
  }

}
